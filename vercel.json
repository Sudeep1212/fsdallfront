{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/angular",
      "config": {
        "server": "dist/events-management-app/server/main.js",
        "browser": "dist/events-management-app/browser",
        "prerender": {
          "routes": [
            "/",
            "/about",
            "/gallery",
            "/support",
            "/feedback",
            "/results"
          ]
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000" },
      "dest": "/assets/$1"
    },
    {
      "src": "/event-registration/(?<id>[^/]+)",
      "dest": "/event-registration/[id]"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NG_APP_API_URL": "https://fsdallback.onrender.com"
  }
}
