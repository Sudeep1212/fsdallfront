{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/events-management-app/browser",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000" },
      "dest": "/assets/$1"
    },
    {
      "src": "/event-registration/(?<id>[^/]+)",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NG_APP_API_URL": "https://fsdallback.onrender.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
