{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build:ssr",
        "outputDirectory": "dist/events-management-app"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000" },
      "dest": "/assets/$1"
    },
    {
      "src": "/event-registration/(?<id>[^/]+)",
      "dest": "/event-registration/[id]"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NG_APP_API_URL": "https://fsdallback.onrender.com"
  }
}
